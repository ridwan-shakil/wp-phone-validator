{
    "name": "ridwan/wp-phone-validator",
    "description": "A lightweight WordPress plugin that validates and auto-formats phone numbers on WooCommerce checkout using Google's libphonenumber library.",
    "type": "wordpress-plugin",
    "version": "1.0.0",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "MD. Ridwan",
            "email": "your-email@example.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4",
        "giggsey/libphonenumber-for-php": "^8.13",
        "select2/select2": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "WPPhoneValidator\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WPPhoneValidator\\Tests\\": "tests/"
        }
    },
    "extra": {
        "wordpress-plugin": {
            "main-file": "wp-phone-validator.php"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "lint": "php -l wp-phone-validator.php",
        "format": "phpcbf --standard=WordPress .",
        "check-cs": "phpcs --standard=WordPress .",
        "post-install-cmd": [
            "composer dump-autoload -o"
        ],
        "post-update-cmd": [
            "composer dump-autoload -o"
        ]
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.13",
        "wp-coding-standards/wpcs": "^3.2"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
